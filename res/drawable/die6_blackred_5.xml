<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="0dp" android:left="0dp" android:bottom="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <size android:width="17dp"
                  android:height="17dp"/>
            <solid android:color="@color/black"/>
            <stroke
                    android:width="0.1dp"
                    android:color="@color/white" />
            <corners
                    android:topLeftRadius="0.1dp"
                    android:topRightRadius="0.1dp"
                    android:bottomLeftRadius="0.1dp"
                    android:bottomRightRadius="0.1dp" />
        </shape>
    </item>

    <!-- row 1 -->
    <item android:top="2dp" android:left="2dp" android:bottom="12dp" android:right="12dp" android:drawable="@drawable/circle_red">
    </item>
    <item android:top="2dp" android:left="12dp" android:bottom="12dp" android:right="2dp" android:drawable="@drawable/circle_red">
    </item>

    <!-- row 2 -->
    <item android:top="7dp" android:left="7dp" android:bottom="7dp" android:right="7dp" android:drawable="@drawable/circle_red">
    </item>

    <!-- row 3 -->
    <item android:top="12dp" android:left="2dp" android:bottom="2dp" android:right="12dp" android:drawable="@drawable/circle_red">
    </item>
    <item android:top="12dp" android:left="12dp" android:bottom="2dp" android:right="2dp" android:drawable="@drawable/circle_red">
    </item>

</layer-list>